<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.volgoak.pokertournament.TournamentActivity">

    <TextView
        tools:text="02:34"
        android:id="@+id/tv_time_to_next_tournament"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_blinds_tournament"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_time_to_next_tournament"
        app:layout_constraintLeft_toLeftOf="@+id/tv_time_to_next_tournament" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_next_blinds_tournament"
        app:layout_constraintRight_toRightOf="@+id/tv_blinds_tournament"
        app:layout_constraintLeft_toLeftOf="@+id/tv_blinds_tournament"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_blinds_tournament" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_pause_tournament"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_next_blinds_tournament"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_end_tournament"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_pause_tournament" />

</android.support.constraint.ConstraintLayout>
</layout>
