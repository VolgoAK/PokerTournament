<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient android:angle="135"
                android:startColor="@color/colorOrange"
                android:centerColor="@color/colorDarkOrange"
                android:endColor="@color/colorMoreDarkOrange"/>
        </shape>
    </item>

    <item >
        <shape android:shape="oval">
            <gradient android:angle="135"
                android:startColor="@color/colorLightOrange"
                android:centerColor="@color/colorOrange"
                android:endColor="@color/colorDarkOrange"/>
        </shape>
    </item>

</selector>