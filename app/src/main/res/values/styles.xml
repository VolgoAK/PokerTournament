<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="green_button">
        <item name="android:background">@drawable/green_button</item>
        <item name="android:layout_width">@dimen/start_button_size</item>
        <item name="android:layout_height">@dimen/start_button_size</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:layout_margin">@dimen/buttons_margin</item>
    </style>

    <style name="start_button" parent="green_button">
        <item name="android:background">@drawable/orange_button</item>
    </style>

</resources>
